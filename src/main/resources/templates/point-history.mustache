{{>layout/header}}
<div class="col-md-6">
    <input type="hidden" id="loginUser" value="{{loginUser}}">
    <div class="card">
        <div class="card-header card-header-text card-header-primary">
            <div class="card-text">
                <h4 class="card-title">Managing Charge</h4>
            </div>
        </div>
        <div class="card-body">
            <form>
                <div class="form-row">
                    <div class="col form-group">
                        <select class="form-control selectpicker" data-style="btn btn-link" id="search_status">
                            <option value="" selected>ALL</option>
                            <option value="Y">APPROVED</option>
                            <option value="N">DENIED</option>
                        </select>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="USER ID" id="search_userName" value="">
                    </div>
                    <button type="button" class="btn btn-white btn-round btn-just-icon" id="btn_search" name="search">
                        <i class="material-icons">search</i>
                        <div class="ripple-container"></div>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Sort</th>
                    <th>User ID</th>
                    <th>Point</th>
                    <th>Request Date</th>
                    <th>Approved Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
            {{#pointHistory}}
                <tr id="{{id}}">
                    <td class="text-center">1</td>
                    <td class="text-left">{{user.userName}}</td>
                    <td class="text-center">{{point}}</td>
                    <td class="text-center">{{requestDate}}</td>
                    {{#status}}
                        <td class="text-center">{{checkDate}}</td>
                        {{#isApproved}}
                            <td class="text-left">Approved by {{adminId}}</td>
                        {{/isApproved}}
                        {{^isApproved}}
                            <td class="text-left">Denied by {{adminId}}</td>
                        {{/isApproved}}
                    {{/status}}
                    {{^status}}
                        <td></td>
                        <td class="td-actions text-center">
                            <button type="button" class="btn btn-info" name="btn_approve" value="Y">
                                <i class="material-icons">done</i>
                            </button>
                            <button type="button" class="btn btn-danger" name="btn_deny" value="N">
                                <i class="material-icons">clear</i>
                            </button>
                        </td>
                    {{/status}}
                </tr>
            {{/pointHistory}}
            {{^pointHistory}}
                <tr>
                    <td>조회 결과가 없습니다.</td>
                </tr>
            {{/pointHistory}}
            </tbody>
        </table>
    </div>
    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" value="-1">Previous</a>
                </li>
            {{#page}}
                <li class="page-item">
                    <a class="page-link" id="page_{{{.}}}" value="{{{.}}}">{{{.}}}</a>
                </li>
            {{/page}}
                <li class="page-item">
                    <a class="page-link" value="0">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<script type="text/javascript" src="/js/point-history.js"></script>
{{>layout/footer}}