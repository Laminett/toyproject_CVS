{{>layout/header}}
<div class="content" id="context">
    <div class="container-fluid">
        <div class="row">
            <input type="hidden" id="loginUser" value="{{loginUser}}">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div style="float: left">
                            <h4 class="card-title">{{#messages}}title.settle{{/messages}}</h4>
                        </div>
                        <div class="form-row" style="float: right">
                            <div class="col">
                                <label for="settleDate">Settle date</label>
                                <input type="text" class="form-control datepicker monthpicker" id="searchDate">
                            </div>
                            <div class="col">
                                <label for="userId">User ID</label>
                                <input type="text" class="form-control" id="searchUserName">
                            </div>
                            <button type="button" class="btn btn-white btn-round btn-just-icon" id="btn_search">
                                <i class="material-icons">search</i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr class="text-center">
                                <th rowspan="2">#</th>
                                <th rowspan="2">user name</th>
                                <th rowspan="2">date</th>
                                <th colspan="2">approval</th>
                                <th colspan="2">cancel</th>
                                <th colspan="2>">total</th>
                                <th rowspan="2">created date</th>
                                <th rowspan="2">settled date</th>
                                <th rowspan="2">status</th>
                            </tr>
                            <tr class="text-center">
                                <th>count</th>
                                <th>amount</th>
                                <th>count</th>
                                <th>amount</th>
                                <th>count</th>
                                <th>amount</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#settle}}
                                <tr id="{{id}}">
                                    <td class="text-center">1</td>
                                    <td class="text-left">user name</td>
                                    <td class="text-center">date</td>
                                    <td class="text-center">approval count</td>
                                    <td class="text-center">approval amount</td>
                                    <td class="text-center">cancel count</td>
                                    <td class="text-center">cancel amount</td>
                                    <td class="text-center">total count</td>
                                    <td class="text-center">total amount</td>
                                    <td class="text-center">created date</td>
                                    <td class="text-center">settled date</td>
                                    <td> status </td>
                                </tr>
                            {{/settle}}
                            {{^settle}}
                                <tr>
                                    <td>{{#messages}}search.no.data{{/messages}}</td>
                                </tr>
                            {{/settle}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div>
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" id="previous">Previous</a>
                        </li>
                        {{#page}}
                            <li class="page-item">
                                <a class="page-link" id="page_{{{.}}}" value="{{{.}}}">{{{.}}}</a>
                            </li>
                        {{/page}}
                        <li class="page-item disabled">
                            <a class="page-link" id="next">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
