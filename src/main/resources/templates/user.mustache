{{>layout/header}}
<div class="content" id="context">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div style="float: left">
                            <h4 class="card-title ">{{#messages}}menu.user{{/messages}}</h4>
                            <p class="card-category"> User management</p>
                        </div>
                        <div style="float: right">
                            <form class="form-inline ml-auto" id="userSearchForm" action="" onsubmit="return false;">
                                <input type="hidden" name="searchKey" value="" />
                                <div class="dropdown" style="margin-right: 10px;">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton-user-search" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        사번
                                    </button>
                                    <div id="user-search-field" class="dropdown-menu" aria-labelledby="dropdownMenuButton-user-search">
                                        <a class="dropdown-item" href="#none" searchKey="username">사번</a>
                                        <a class="dropdown-item" href="#none" searchKey="fullName">이름</a>
                                        <a class="dropdown-item" href="#none" searchKey="email">Email</a>
                                        <a class="dropdown-item" href="#none" searchKey="department">부서</a>
                                    </div>
                                </div>
                                <div class="form-group has-white">
                                    <input id="searchValue" name="searchValue" type="text" value="" class="form-control" placeholder="">
                                </div>
                                <button type="button" class="btn btn-white btn-round btn-just-icon" id="user-search-btn">
                                    <i class="material-icons">search</i>
                                    <div class="ripple-container"></div>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" id="result1">
                            <table class="table" id="templ1">
                                <thead class=" text-primary">
                                <th>사번</th>
                                <th>이름</th>
                                <th>Email</th>
                                <th>부서</th>
                                <th>Level</th>
                                <th>등록일</th>
                                </thead>
                                <tbody id="usersArea"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div>
                    <nav aria-label="Page navigation">
                        <ul id="usersPagingArea" class="pagination justify-content-center"></ul>
                    </nav>
                </div>
                <div>
                    <button class="btn btn-round" data-toggle="modal" data-target="#createUserModal">
                        <i class="material-icons">assignment</i>&nbsp;{{#messages}}button.create{{/messages}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="createUserModal" tabindex="-1" role="">
    <div class="modal-dialog modal-login" role="document">
        <div class="modal-content">
            <div class="card card-signup card-plain">
                <div class="modal-header">
                    <div class="card-header card-header-primary text-center" style="width:100%">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="material-icons">clear</i>
                        </button>
                        <h4 class="card-title">User Information</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <form id="createUserForm" class="form" method="" action="">
                        <input type="hidden" id="userId" value="" />
                        <div class="card-body">
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend" style="width:100px;">
                                        <div class="input-group-text">사번</div>
                                    </div>
                                    <input type="text" id="username" name="username" class="form-control">
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend" style="width:100px;">
                                        <div class="input-group-text">이름</div>
                                    </div>
                                    <input type="text" id="fullName" name="fullName" class="form-control">
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend" style="width:100px;">
                                        <div class="input-group-text">Level</div>
                                    </div>
                                    <select id="role" name="role" class="form-control">
                                        {{#roleNames}}
                                            <option>{{{.}}}</option>
                                        {{/roleNames}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend" style="width:100px;">
                                        <div class="input-group-text">부서</div>
                                    </div>
                                    <input type="text" id="department" name="department" class="form-control">
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend" style="width:100px;">
                                        <div class="input-group-text">Email</div>
                                    </div>
                                    <input type="text" id="email" name="email" class="form-control">
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend" style="width:100px;">
                                        <div class="input-group-text">연락처</div>
                                    </div>
                                    <input type="text" id="phoneNumber" name="phoneNumber" class="form-control">
                                </div>
                            </div>
                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend" style="width:100px;">
                                        <div class="input-group-text">암호</div>
                                    </div>
                                    <input type="password" id="password" name="password" class="form-control">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer justify-content-center">
                    <a href="#none" id="createUserBtn" class="btn btn-primary btn-round">Regist</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="usersTemplate" type="text/x-jquery-tmpl">
<tr>
    <td><a href="#none" user-id="${id}">${username}</a></td>
    <td>${fullName}</td>
    <td>${email}</td>
    <td>${department}</td>
    <td>${role}</td>
    <td>${createdDate}</td>
</tr>
</script>
<script id="usersNoDataTemplate" type="text/x-jquery-tmpl">
<tr>
    <td colspan="6">No Data.</td>
</tr>
</script>
<script id="usersPagingTemplate" type="text/x-jquery-tmpl">
<li class="page-item">
    <a class="page-link" href="#none">${page}</a>
</li>
</script>
<script type="text/javascript" src="/js/plugins/jquery.tmpl.js"></script>
<script type="text/javascript" src="/js/user.js"></script>
{{>layout/footer}}