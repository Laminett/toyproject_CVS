{{>layout/header}}
<div class="content" id="context">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <div style="float: left">
                            <h4 class="card-title ">Product Table</h4>
                            <p class="card-category"> Here is a subtitle for this table</p>
                        </div>
                        <div style="float: right">
                            <form class="form-inline ml-auto" id="searchForm">
                                <div class="form-group">
                                    <input type="hidden" id="LoginUser" name="LoginUser" value={{loginUser}}>
                                    <select id="searchField" class="form-control" data-style="btn btn-link" name="searchField">
                                        <option selected>Choose...</option>
                                        <option>category</option>
                                        <option>name</option>
                                        <option>point</option>
                                    </select>
                                </div>
                                <div class="form-group has-white">
                                    <input id="searchValue" name="searchValue" type="text" value="" class="form-control" placeholder="Search">
                                </div>
                                <button type="button" class="btn btn-white btn-round btn-just-icon" id="search" name="search">
                                    <i class="material-icons">search</i>
                                    <div class="ripple-container"></div>
                                </button>

                            </form>

                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive" id="result1">
                            <table class="table" id="templ1">
                                <thead class="text-primary text-center">
                                <th>NO</th>
                                <th>CATEGORY</th>
                                <th>NAME</th>
                                <th>POINT</th>
                                <th>QUANTITY</th>
                                <th>USEYN</th>
                                <th>CREATED_ID</th>
                                <th>CREATED_DATE</th>
                                <th>MODIFIED_ID</th>
                                <th>MODIFIED_DATE</th>
                                <th>ACTIONS</th>
                                </thead>
                                <tbody id="products" class="text-center"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div>
                    <button type="button" name="addProduct" class="btn btn-primary" data-toggle="modal"
                            data-target="#addUpdateModal">상품추가
                    </button>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="addUpdateModal" tabindex="-1" role="">
    <div class="modal-dialog modal-login" role="document" style="margin-top: 160px;">
        <div class="modal-content">
            <div class="card card-signup card-plain" style="margin-top: 0;margin-bottom: 0">
                <div class="modal-header" style="padding-top: 0;">
                    <div class="card-header card-header-primary text-center">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="material-icons">clear</i>
                        </button>
                        <h4 class="card-title">Log in</h4>
                        <input type="hidden" id="id" name="id">
                        <input type="hidden" id="createdId" name="createdId">
                        <input type="hidden" id="modifiedId" name="modifiedId">
                    </div>
                </div>
                <div class="modal-body">
                    <form class="form" method="" action="">
                        <p class="description text-center">Modify Product Detail</p>
                        <div class="card-body">

                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="material-icons">qr_code_scanner</i></div>
                                    </div>
                                    <input type="text" class="form-control" id="barcode" name="barcode" value="testvalue" readonly>
                                </div>
                            </div>

                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="material-icons">format_list_bulleted</i></div>
                                    </div>
                                    <select id="categoryId" class="form-control" data-style="btn btn-link" name="categoryId" >
                                        <option selected>Choose Product Category</option>
                                        <option>Drink</option>
                                        <option>Food</option>
                                        <option>Snack</option>
                                        <option>etc</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="material-icons">local_offer</i></div>
                                    </div>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="ex> Product Name" maxlength="100">
                                </div>
                            </div>

                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="material-icons">money</i></div>
                                    </div>
                                    <input type="text" class="form-control" id="point" name="point" placeholder="ex> Product Price" maxlength="17">
                                </div>
                            </div>

                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="material-icons">local_grocery_store</i></div>
                                    </div>
                                    <input type="text" class="form-control selectpicker" id="quantity" name="quantity" placeholder="Product Quantity" maxlength="5">
                                </div>
                            </div>

                            <div class="form-group bmd-form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">

                                        <div class="input-group-text"><i id="check_icon" class="material-icons">check_box</i>
                                        </div>

                                        <div id="checkbox_div">
                                            <input class="form-check-input" type="checkbox" value="" name="isEnabled"
                                                   id="isEnabled"
                                                   style="position: inherit;margin-left: 0px;margin-top: 6px;width: 20px; height: 18px;">
                                            <label class="form-check-label" style="margin-left: 10px;margin-top: 7px;">
                                                isEnabled
                                                <span class="form-check-sign"><span class="check"></span></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="submit" class="btn btn-primary" id="addProuct" style="float:right">Sign in</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery.scannerdetection.js"></script>
<script type="text/javascript" src="/js/product.js"></script>
<!-- barcode scanner -->
{{>layout/footer}}